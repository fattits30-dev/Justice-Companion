{
  // Performance-first VS Code configuration for Justice Companion
  // Minimize resource usage while maintaining essential functionality

  // Core TypeScript Configuration - Minimal but effective
  "typescript.preferences.importModuleSpecifierEnding": "ts",
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",

  // Minimal ESLint (focus on errors only)
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.format.enable": false, // Let Prettier handle formatting
  "eslint.workingDirectories": [{ "mode": "auto" }],

  // Editor Configuration - Performance optimized
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false, // Reduce formatting triggers
  "editor.formatOnType": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "editor.trimAutoWhitespace": true,
  "editor.suggestSelection": "first",
  "editor.quickSuggestions": { "strings": false }, // Reduce suggestions
  "editor.wordBasedSuggestions": "off", // Performance cost
  "editor.parameterHints.enabled": false, // Performance cost
  "editor.hover.enabled": true,
  "editor.minimap.enabled": false, // Performance cost
  "editor.rulers": [100], // Single ruler
  "editor.renderWhitespace": "off", // Performance cost
  "editor.cursorBlinking": "blink",
  "editor.cursorSmoothCaretAnimation": "off", // Performance cost

  // Streamlined error detection
  "errorLens.enabled": true,
  "errorLens.messageTemplate": "$severity: $message",
  "errorLens.delay": 1000, // Longer delay for performance

  // Essential file handling
  "files.eol": "\n",
  "files.encoding": "utf8",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 3000, // Longer delay

  // Performance-focused exclusions
  "files.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.git": true,
    "**/.DS_Store": true,
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.nyc_output": true,
    "**/coverage": true
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.git/objects/**": true,
    "**/__pycache__/**": true,
    "**/.pytest_cache/**": true,
    "**/.mypy_cache/**": true
  },

  // Essential search settings
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/coverage": true,
    "**/.nyc_output": true,
    "**/__pycache__": true,
    "**/*.pyc": true
  },

  // Testing - keep minimal
  "vitest.enable": true,
  "vitest.commandLine": "pnpm test",

  // Playwright - essential for your project
  "playwright.reuseBrowser": true,

  // Git - streamlined
  "git.enabled": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.showPushSuccessNotification": false,

  // GitLens - minimal output (balanced performance)
  "gitlens.currentLine.enabled": true, // Show git blame on current line
  "gitlens.currentLine.format": "${author}, ${agoOrDate} â€¢ ${message}",
  "gitlens.currentLine.scrollable": false,
  "gitlens.codeLens.enabled": false, // Keep disabled for performance
  "gitlens.hovers.enabled": true, // Hover for full commit details

  // GitHub Copilot
  "github.copilot.enable": {
    "*": true,
    "typescript": true,
    "typescriptreact": true,
    "python": true
  },

  // GitHub Actions - Enable workflow output
  "github-actions.workflows.pinned.workflows": [".github/workflows/ci.yml"],
  "github-actions.workflows.pinned.refresh.enabled": true,
  "github-actions.workflows.pinned.refresh.interval": 60,

  // GitHub Pull Requests - Enable PR output
  "githubPullRequests.pullRequestDescription": "template",
  "githubPullRequests.defaultMergeMethod": "squash",
  "githubPullRequests.showInSCM": true,
  "githubPullRequests.queries": [
    {
      "label": "My Pull Requests",
      "query": "is:open author:${user}"
    },
    {
      "label": "Assigned To Me",
      "query": "is:open assignee:${user}"
    }
  ],

  // Terminal - performance optimized
  "terminal.integrated.defaultProfile.windows": "Git Bash",
  "terminal.integrated.scrollback": 2000, // Reduced from 10000
  "terminal.integrated.enablePersistentSessions": false, // Performance cost

  // JavaScript/TypeScript - minimal validation
  "js/ts.implicitProjectConfig.checkJs": false,
  "javascript.validate.enable": true,
  "typescript.validate.enable": true,

  // Essential extensions only
  "path-intellisense.autoSlashAfterDirectory": true,

  // Streamlined TODO highlighting
  "todohighlight.isEnable": true,

  // Minimal Better Comments
  "better-comments.tags": [
    { "tag": "!", "color": "#FF2D00" },
    { "tag": "?", "color": "#3498DB" }
  ],

  // TailwindCSS - keep essential
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cn\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],

  // Import Cost - keep essential
  "importCost.smallPackageSize": 100,
  "importCost.mediumPackageSize": 500,

  // Markdown - minimal
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one",
    "editor.wordWrap": "on"
  },

  // File type associations - keep essential
  "[typescript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[javascriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[json]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[jsonc]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[html]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[css]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },

  // Security & Privacy
  "security.workspace.trust.untrustedFiles": "prompt",
  "telemetry.telemetryLevel": "off",

  // Workbench - performance optimized
  "workbench.colorTheme": "Default Dark+",
  "workbench.iconTheme": "vs-minimal",
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": true, // Keep for performance
  "workbench.editor.closeOnFileDelete": true,
  "workbench.panel.defaultLocation": "bottom",
  "workbench.sideBar.location": "left",
  "workbench.tree.indent": 12,

  // Explorer - streamlined
  "explorer.confirmDelete": true,
  "explorer.confirmDragAndDrop": true,
  "explorer.compactFolders": true,
  "explorer.fileNesting.enabled": true,

  // Python - only for AI service
  "python.defaultInterpreterPath": "python",
  "python.envFile": "${workspaceFolder}/.env",
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  "chat.mcp.serverSampling": {
    "Justice Companion/.vscode/mcp.json: MCP_DOCKER": {
      "allowedModels": ["copilot/auto"]
    }
  },
  "snyk.advanced.organization": "ff736ceb-1d26-4940-9c72-9838d2847a15",
  "snyk.advanced.autoSelectOrganization": true
}
