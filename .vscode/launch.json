{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Electron: Main Process",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/tsx",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/tsx.cmd"
      },
      "args": ["node_modules/electron/cli.js", "electron/main.ts", "--remote-debugging-port=9223"],
      "outputCapture": "std",
      "console": "integratedTerminal",
      "preLaunchTask": "npm: dev",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ],
      "env": {
        "NODE_ENV": "development",
        "ELECTRON_ENABLE_LOGGING": "1",
        "ELECTRON_DISABLE_SECURITY_WARNINGS": "true"
      },
      "stopOnEntry": false,
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "smartStep": true,
      "trace": true
    },
    {
      "name": "Electron: Renderer Process",
      "type": "chrome",
      "request": "attach",
      "port": 9223,
      "webRoot": "${workspaceFolder}/src",
      "timeout": 30000,
      "urlFilter": "http://localhost:5173/**",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      },
      "trace": true
    },
    {
      "name": "Electron: Main + Renderer",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/tsx",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/tsx.cmd"
      },
      "args": ["node_modules/electron/cli.js", "electron/main.ts", "--remote-debugging-port=9223"],
      "outputCapture": "std",
      "console": "integratedTerminal",
      "preLaunchTask": "npm: dev",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ],
      "env": {
        "NODE_ENV": "development",
        "ELECTRON_ENABLE_LOGGING": "1",
        "ELECTRON_DISABLE_SECURITY_WARNINGS": "true"
      },
      "stopOnEntry": false,
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "smartStep": true,
      "trace": true,
      "serverReadyAction": {
        "pattern": "started on.*port ([0-9]+)",
        "uriFormat": "http://localhost:%s",
        "action": "debugWithChrome"
      }
    },
    {
      "name": "Debug Vitest Tests (Watch Mode)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["test", "--watch"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "stopOnEntry": false,
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "smartStep": true,
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "name": "Debug Current Test File",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": [
        "test",
        "--run",
        "--reporter=verbose",
        "${relativeFile}"
      ],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "stopOnEntry": false,
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "smartStep": true,
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "name": "Run Unit Tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["test", "--run"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "stopOnEntry": false,
      "autoAttachChildProcesses": false,
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "name": "E2E Tests (Playwright)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["test:e2e"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "stopOnEntry": false,
      "autoAttachChildProcesses": true,
      "env": {
        "NODE_ENV": "test",
        "PWDEBUG": "1"
      }
    },
    {
      "name": "Debug E2E Current Spec",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": [
        "exec",
        "playwright",
        "test",
        "${relativeFile}",
        "--debug"
      ],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "stopOnEntry": false,
      "autoAttachChildProcesses": true,
      "env": {
        "NODE_ENV": "test",
        "PWDEBUG": "1"
      }
    },
    {
      "name": "Attach to Running Electron",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ]
    },
    {
      "name": "TypeScript: Check Errors",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["type-check"],
      "console": "integratedTerminal",
      "stopOnEntry": false
    }
  ],
  "compounds": [
    {
      "name": "Electron: All Processes",
      "configurations": [
        "Electron: Main Process",
        "Electron: Renderer Process"
      ],
      "stopAll": true,
      "preLaunchTask": "npm: dev"
    },
    {
      "name": "Full Development Stack",
      "configurations": [
        "Electron: Main + Renderer",
        "Debug Vitest Tests (Watch Mode)"
      ],
      "stopAll": true
    }
  ]
}
