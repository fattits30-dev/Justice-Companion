{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "üöÄ PWA Full Stack (Frontend + Backend)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev:full"],
      "outputCapture": "std",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ],
      "env": {
        "NODE_ENV": "development",
        "AI_MODE": "sdk",
        "HF_TOKEN": "${env:HF_TOKEN}",
        "OPENAI_API_KEY": "${env:OPENAI_API_KEY}",
        "BACKEND_PORT": "8000"
      },
      "stopOnEntry": false,
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "smartStep": true,
      "trace": false,
      "serverReadyAction": {
        "pattern": "Local:.*?(https?://[0-9a-z:]+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    },
    {
      "name": "‚ñ∂Ô∏è Frontend Only (npm run dev)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "outputCapture": "std",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "stopOnEntry": false,
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "smartStep": true,
      "trace": false
    },
    {
      "name": "üêç Python AI Service",
      "type": "python",
      "request": "launch",
      "module": "ai-service.main",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "ENVIRONMENT": "production",
        "PORT": "5051",
        "HOST": "127.0.0.1",
        "HF_TOKEN": "${env:HF_TOKEN}",
        "OPENAI_API_KEY": "${env:OPENAI_API_KEY}",
        "PYTHONUNBUFFERED": "1",
        "LOG_LEVEL": "INFO"
      },
      "justMyCode": false,
      "stopOnEntry": false
    },
    {
      "name": "üß™ Run Tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["test", "--run"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "stopOnEntry": false,
      "autoAttachChildProcesses": false,
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "name": "üîç Test Python API",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/test-api-direct.py",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "PYTHONUNBUFFERED": "1"
      },
      "justMyCode": true
    }
  ]
}
