{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "üöÄ PWA Full Stack (Frontend + Backend)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev:full"],
      "outputCapture": "std",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ],
      "env": {
        "NODE_ENV": "development",
        "AI_MODE": "sdk",
        "HF_TOKEN": "${env:HF_TOKEN}",
        "OPENAI_API_KEY": "${env:OPENAI_API_KEY}"
      },
      "stopOnEntry": false,
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "smartStep": true,
      "trace": false
    },
    {
      "name": "‚ñ∂Ô∏è Frontend Only (npm run dev)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "outputCapture": "std",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "stopOnEntry": false,
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "smartStep": true,
      "trace": false
    },
    {
      "name": "üêç Python AI Service",
      "type": "python",
      "request": "launch",
      "module": "ai-service.main",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "ENVIRONMENT": "production",
        "PORT": "5051",
        "HOST": "127.0.0.1",
        "HF_TOKEN": "${env:HF_TOKEN}",
        "OPENAI_API_KEY": "${env:OPENAI_API_KEY}",
        "PYTHONUNBUFFERED": "1",
        "LOG_LEVEL": "INFO"
      },
      "justMyCode": false,
      "stopOnEntry": false
    },
    {
      "name": "‚ö° Electron App (Python must be running)",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/tsx",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/tsx.cmd"
      },
      "args": [
        "node_modules/electron/cli.js",
        "electron/main.ts",
        "--remote-debugging-port=9223"
      ],
      "outputCapture": "std",
      "console": "integratedTerminal",
      "preLaunchTask": "Start Vite Dev Server",
      "postDebugTask": "Kill Vite Dev Server",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**"
      ],
      "env": {
        "NODE_ENV": "development",
        "ELECTRON_ENABLE_LOGGING": "1",
        "ELECTRON_DISABLE_SECURITY_WARNINGS": "true",
        "NODE_OPTIONS": "--import=tsx",
        "HF_TOKEN": "${env:HF_TOKEN}",
        "OPENAI_API_KEY": "${env:OPENAI_API_KEY}"
      },
      "stopOnEntry": false,
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "smartStep": true,
      "trace": false
    },
    {
      "name": "üß™ Run Tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["test", "--run"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "stopOnEntry": false,
      "autoAttachChildProcesses": false,
      "env": {
        "NODE_ENV": "test"
      }
    },
    {
      "name": "üîç Test Python API",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/test-api-direct.py",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "PYTHONUNBUFFERED": "1"
      },
      "justMyCode": true
    }
  ]
}
