{
  "recommendations": [
    // Core Essentials - Performance Optimized
    "dbaeumer.vscode-eslint",
    "esbenp.prettier-vscode",
    "ms-vscode.vscode-typescript-next",

    // Testing - Essential for your project
    "vitest.explorer",
    "ms-playwright.playwright",

    // Git - Essential, streamlined
    "eamodio.gitlens",

    // Error Detection - Minimal but useful
    "usernamehw.errorlens",

    // TypeScript/JavaScript - Essential tools
    "yoavbls.pretty-ts-errors",
    "wix.vscode-import-cost",

    // React/Frontend - Only essential
    "bradlc.vscode-tailwindcss",
    "dsznajder.es7-react-js-snippets",

    // Productivity - Streamlined selection
    "aaron-bond.better-comments",
    "christian-kohler.path-intellisense",
    "wayou.vscode-todo-highlight",
    "formulahendry.auto-rename-tag",

    // Documentation - Minimal but effective
    "yzhang.markdown-all-in-one",

    // Security - Keep essential
    "snyk-security.snyk-vulnerability-scanner",

    // File Navigation - Essential
    "eamodio.toggle-excluded-files",

    // API Development - Keep for REST APIs
    "humao.rest-client",

    // JSON Support - Good to have
    "ms-vscode.vscode-json",

    // Python - Only for AI service
    "ms-python.python",
    "ms-python.black-formatter"
  ],
  "unwantedRecommendations": [
    // Performance-heavy extensions to avoid
    "eamodio.git-graph", // duplicate git functionality
    "donjayamanne.githistory", // resource intensive git history
    "sburg.vscode-javascript-booster", // duplicate snippets
    "styled-components.vscode-styled-components", // if not using heavily
    "ms-vscode.vscode-node-azure-pack", // unnecessary for local dev
    "saoudrizwan.claude-dev", // redundant with Cline
    "ms-vsliveshare.vsliveshare", // resource intensive collaboration
    "gruntfuggly.todo-tree", // duplicate TODO highlighting
    "bierner.markdown-preview-github-styles", // unnecessary styling
    "hookyqr.beautify", // old formatter
    "ms-vscode.vscode-typescript-tslint-plugin" // deprecated
  ]
}
