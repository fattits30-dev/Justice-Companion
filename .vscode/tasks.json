{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: dev",
      "type": "shell",
      "command": "pnpm dev",
      "isBackground": true,
      "problemMatcher": {
        "owner": "vite",
        "pattern": {
          "regexp": "^(.*)$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "VITE",
          "endsPattern": "(Local|Network):.*http"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Kill Vite Dev Server",
      "type": "shell",
      "command": "taskkill /F /IM node.exe /FI \"WINDOWTITLE eq vite*\"",
      "windows": {
        "command": "taskkill /F /IM node.exe /FI \"WINDOWTITLE eq vite*\""
      },
      "linux": {
        "command": "pkill -f 'vite'"
      },
      "osx": {
        "command": "pkill -f 'vite'"
      },
      "presentation": {
        "reveal": "never"
      }
    },
    {
      "label": "Build Electron",
      "type": "shell",
      "command": "pnpm build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Type Check",
      "type": "shell",
      "command": "pnpm type-check",
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Lint",
      "type": "shell",
      "command": "pnpm lint",
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "Lint Fix",
      "type": "shell",
      "command": "pnpm lint:fix",
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "pnpm test",
      "problemMatcher": []
    },
    {
      "label": "Run Tests with Coverage",
      "type": "shell",
      "command": "pnpm test:coverage",
      "problemMatcher": []
    }
  ]
}
