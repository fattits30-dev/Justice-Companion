    },
    {
      "label": "Start Development (Full Stack)",
      "type": "shell",
      "command": "pnpm electron:dev",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    }
  ]
}
