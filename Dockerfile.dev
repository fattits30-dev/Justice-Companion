# Development Dockerfile for Justice Companion
# Use this for containerized development environment

FROM node:22-bookworm

# Install system dependencies for Electron
RUN apt-get update && apt-get install -y \
    libgtk-3-0 \
    libnotify4 \
    libnss3 \
    libxss1 \
    libxtst6 \
    xvfb \
    libgbm1 \
    libasound2 \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose ports
EXPOSE 5173 5555

# Set environment
ENV NODE_ENV=development

# Run migrations on startup
CMD ["sh", "-c", "npm run db:migrate && npm run dev"]
