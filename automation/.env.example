# Dual Claude Code Orchestration System
# Environment Configuration Template

# REQUIRED: Anthropic API Key
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-api-key-here

# REQUIRED: Project paths (update to your actual path)
PROJECT_ROOT=/path/to/Justice Companion
STATE_FILE=automation/state/app_state.json
LOCK_FILE=automation/state/app_state.lock
LOG_FILE=automation/logs/automation.log

# Claude Configuration
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# Automation Settings
MAX_RETRIES=5
AUTO_FIX_ENABLED=true
FILE_WATCH_DEBOUNCE_SECONDS=2

# File Watching Configuration
# Comma-separated list of directories to watch (relative to PROJECT_ROOT)
WATCH_PATHS=src,electron,scripts,mcp-server/src

# Only watch files with these extensions (leave empty to watch all)
WATCH_EXTENSIONS=.ts,.tsx,.js,.jsx,.json

# Ignore patterns (comma-separated glob patterns)
# These patterns will be combined with .orchestratorignore file
IGNORE_PATTERNS=*.md,*.txt,*.log,node_modules,dist,dist-electron,release,.git,.vscode,automation/state,automation/logs

# Debouncing & Batching
# Time window to collect file changes before processing (seconds)
BATCH_WINDOW_SECONDS=10.0
# Maximum number of files to process in a single batch
MAX_BATCH_SIZE=10

# Auto-Fix Configuration
# Only auto-fix files with these extensions (leave empty for all)
AUTO_FIX_FILE_TYPES=.ts,.tsx,.js,.jsx
# Exclude patterns from auto-fix (even if they match AUTO_FIX_FILE_TYPES)
AUTO_FIX_EXCLUDE=*.test.ts,*.test.tsx,*.spec.ts,*.spec.tsx,*.config.ts,*.config.js

# AutoFixer Circuit Breaker Settings
CIRCUIT_BREAKER_THRESHOLD=3
CIRCUIT_BREAKER_WINDOW=3600

# Error Escalation Settings
GITHUB_TOKEN=
GITHUB_REPO=owner/repo
SLACK_WEBHOOK_URL=
EMAIL_WEBHOOK_URL=

# Web Dashboard (Optional)
DASHBOARD_PORT=5000
DASHBOARD_HOST=127.0.0.1

# Redis (Optional - for distributed state)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
