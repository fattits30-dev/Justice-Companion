{
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "node16",
    "outDir": "./dist/electron",
    "skipLibCheck": true,
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,

    /* Module Resolution */
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Linting */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Types */
    "types": ["node", "better-sqlite3"]
  },
  "include": [
    "electron/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/views/**/*",
    "src/components/**/*",
    "src/App.tsx",
    "src/main.tsx",
    "src/contexts/**/*",
    "src/hooks/**/*",
    "src/features/**/*",
    "src/workflow/**/*",
    "src/test-utils/**/*",
    "src/test/**/*",
    "src/utils/exportToPDF.ts",
    "src/utils/migrate-to-secure-storage.ts",
    "tests/**/*",
    "e2e/**/*"
  ]
}
