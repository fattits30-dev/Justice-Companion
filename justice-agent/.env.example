# Justice Agent Configuration
# Copy this file to .env and fill in your values

# Required: Your Anthropic API key
# Get one at: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_api_key_here

# Justice Companion Backend URL (for API integration)
JUSTICE_COMPANION_API_URL=http://localhost:8000

# Optional: JWT token for authenticated API calls
# JUSTICE_COMPANION_TOKEN=your_jwt_token_here

# Optional: Model selection (default: claude-sonnet-4-5-20250514)
# CLAUDE_MODEL=claude-sonnet-4-5-20250514

# Optional: Logging level (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO

# Optional: Enable debug logging
# DEBUG=true
