{
  "name": "justice-companion",
  "version": "1.0.0",
  "description": "Privacy-first AI-powered case management for UK legal matters",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:frontend:e2e": "vite --port 5178 --strictPort",
    "dev:backend": "node ./scripts/run-backend-dev.mjs",
    "dev:full": "concurrently -n \"backend,frontend\" -c \"yellow,cyan\" \"npm run dev:backend\" \"npm run dev:frontend:e2e\"",
    "start": "powershell -ExecutionPolicy Bypass -File scripts/dev-manager.ps1 start",
    "stop": "powershell -ExecutionPolicy Bypass -File scripts/dev-manager.ps1 stop",
    "status": "powershell -ExecutionPolicy Bypass -File scripts/dev-manager.ps1 status",
    "clean": "powershell -ExecutionPolicy Bypass -File scripts/dev-manager.ps1 clean",
    "start:legacy": "npm run dev:full",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "prepare": "husky",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "playwright test --debug",
    "e2e:report": "playwright show-report"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.27.3",
    "@huggingface/inference": "^2.8.1",
    "@sentry/react": "10.27.0",
    "@tanstack/react-query": "^5.62.3",
    "ai": "^4.0.33",
    "axios": "^1.7.9",
    "better-sqlite3": "^11.7.0",
    "better-sqlite3-multiple-ciphers": "^12.4.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.4",
    "date-fns": "^4.1.0",
    "docx": "^8.5.1",
    "dompurify": "^3.2.2",
    "fast-xml-parser": "^4.5.1",
    "framer-motion": "^11.13.1",
    "html2canvas": "^1.4.1",
    "html2pdf.js": "^0.10.2",
    "inversify": "^6.2.1",
    "jspdf": "^2.5.2",
    "lodash": "^4.17.21",
    "lru-cache": "^11.0.2",
    "lucide-react": "^0.468.0",
    "mammoth": "^1.9.0",
    "openai": "^4.75.2",
    "pdfkit": "^0.15.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.0",
    "react-hot-toast": "^2.4.1",
    "react-markdown": "^9.0.3",
    "react-router-dom": "^6.28.0",
    "reflect-metadata": "^0.2.2",
    "sonner": "^1.7.1",
    "tailwind-merge": "^2.5.4",
    "uuid": "^11.0.3",
    "winston": "^3.17.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@testing-library/jest-dom": "^6.6.2",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/better-sqlite3": "^7.6.11",
    "@types/lodash": "^4.17.12",
    "@types/node": "^22.8.1",
    "@types/pdfkit": "^0.17.3",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/coverage-v8": "^2.1.6",
    "@vitest/ui": "^2.1.6",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "eslint": "^9.14.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "husky": "^9.1.6",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "postcss": "^8.5.0",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.12.2",
    "vite": "^6.0.5",
    "vite-plugin-node-polyfills": "^0.23.0",
    "vite-plugin-pwa": "^0.20.5",
    "vitest": "^2.1.6"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "author": "",
  "license": "MIT",
  "keywords": [
    "legal",
    "case-management",
    "ai",
    "pwa",
    "react",
    "typescript"
  ]
}
