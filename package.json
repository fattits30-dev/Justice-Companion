{
  "name": "justice-companion",
  "version": "1.0.0",
  "description": "Privacy-first AI-powered case management for UK legal matters",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:backend": "cd backend && python -m uvicorn main:app --host 0.0.0.0 --port 8000 --reload",
    "dev:full": "concurrently -n \"backend,frontend\" -c \"yellow,cyan\" \"npm run dev:backend\" \"npm run dev\"",
    "start": "powershell -ExecutionPolicy Bypass -File scripts/dev-manager.ps1 start",
    "stop": "powershell -ExecutionPolicy Bypass -File scripts/dev-manager.ps1 stop",
    "status": "powershell -ExecutionPolicy Bypass -File scripts/dev-manager.ps1 status",
    "clean": "powershell -ExecutionPolicy Bypass -File scripts/dev-manager.ps1 clean",
    "start:legacy": "npm run dev:full",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "prepare": "husky",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "playwright test --debug",
    "e2e:report": "playwright show-report"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.70.0",
    "@huggingface/inference": "^4.13.3",
    "@sentry/react": "^10.26.0",
    "@tanstack/react-query": "^5.59.0",
    "@types/dompurify": "^3.0.5",
    "ai": "^5.0.97",
    "axios": "^1.7.7",
    "better-sqlite3": "^11.5.0",
    "better-sqlite3-multiple-ciphers": "^12.4.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "docx": "^9.5.1",
    "dompurify": "^3.3.0",
    "fast-xml-parser": "^5.3.2",
    "framer-motion": "^11.11.7",
    "html2canvas": "^1.4.1",
    "html2pdf.js": "^0.12.1",
    "inversify": "^6.0.2",
    "jspdf": "^3.0.4",
    "lodash": "^4.17.21",
    "lru-cache": "^11.2.2",
    "lucide-react": "^0.454.0",
    "mammoth": "^1.11.0",
    "openai": "^6.9.1",
    "pdfkit": "^0.17.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
    "react-hot-toast": "^2.6.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.27.0",
    "reflect-metadata": "^0.2.2",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.5.4",
    "uuid": "^10.0.0",
    "winston": "^3.18.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@testing-library/jest-dom": "^6.6.2",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/better-sqlite3": "^7.6.11",
    "@types/lodash": "^4.17.12",
    "@types/node": "^22.8.1",
    "@types/pdfkit": "^0.17.3",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/coverage-v8": "^4.0.13",
    "@vitest/ui": "^4.0.13",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "eslint": "^9.13.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.13",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.6",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.47.0",
    "vite": "^6.4.1",
    "vite-plugin-node-polyfills": "^0.24.0",
    "vite-plugin-pwa": "^1.1.0",
    "vitest": "^4.0.13"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "",
  "license": "MIT",
  "keywords": [
    "legal",
    "case-management",
    "ai",
    "pwa",
    "react",
    "typescript"
  ]
}
