{
  "name": "justice-companion",
  "version": "1.0.0",
  "description": "Privacy-first web application for managing legal cases, evidence, documents, and AI-powered legal research",
  "author": {
    "name": "Justice Companion Team",
    "email": "support@justicecompanion.app"
  },
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/justice-companion.git"
  },
  "engines": {
    "node": ">=20.18.0 <21.0.0",
    "npm": ">=10.0.0"
  },
  "overrides": {
    "esbuild": ">=0.25.0"
  },
  "scripts": {
    "start": "node scripts/start-full-stack.js",
    "start:full": "node scripts/start-full-stack.js",
    "start:frontend": "vite",
    "dev": "node scripts/start-full-stack.js",
    "dev:frontend": "vite",
    "dev:smart": "node scripts/start-dev-server.js",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "pretest": "npm run rebuild:node",
    "test": "vitest",
    "test:coverage": "vitest run --coverage || true",
    "test:e2e": "playwright test",
    "test:e2e:auth": "playwright test e2e-tests/auth.spec.ts",
    "test:e2e:chat": "playwright test e2e-tests/chat.spec.ts",
    "test:e2e:pwa": "playwright test e2e-tests/pwa-install.spec.ts",
    "test:e2e:dev": "playwright test --headed --browser chromium",
    "benchmark:pagination": "tsx src/benchmarks/pagination-benchmark.ts",
    "analyze:components": "tsx src/scripts/analyze-react-components.ts",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "db:migrate": "tsx scripts/migration-status.ts run",
    "db:migrate:status": "tsx scripts/migration-status.ts",
    "db:migrate:rollback": "tsx scripts/rollback-migration.ts",
    "db:backup": "tsx scripts/backup-database.ts",
    "db:backup:list": "tsx scripts/list-backups.ts",
    "rebuild:node": "node scripts/rebuild-for-node.js",
    "guardian": "powershell -ExecutionPolicy Bypass -File guardian-local.ps1 scan",
    "guardian:scan": "powershell -ExecutionPolicy Bypass -File guardian-local.ps1 scan",
    "guardian:file": "powershell -ExecutionPolicy Bypass -File guardian-local.ps1 file",
    "guardian:watch": "powershell -ExecutionPolicy Bypass -File guardian-local.ps1 continuous",
    "guardian:status": "powershell -ExecutionPolicy Bypass -File guardian-local.ps1 status",
    "workflow": "tsx src/workflow/workflow-cli.ts",
    "workflow:plan": "tsx src/workflow/workflow-cli.ts",
    "workflow:test": "tsx src/workflow/workflow-test.ts",
    "fix-loop": "tsx scripts/error-fix-loop.ts",
    "quality-gate": "tsx scripts/quality-gate-check.ts",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{js,jsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.40",
    "@ai-sdk/cohere": "^2.0.17",
    "@ai-sdk/google": "^2.0.26",
    "@ai-sdk/mistral": "^2.0.22",
    "@ai-sdk/openai": "^2.0.61",
    "@anthropic-ai/claude-agent-sdk": "^0.1.23",
    "@anthropic-ai/sdk": "^0.68.0",
    "@huggingface/inference": "^4.13.0",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-icons": "^1.3.2",
    "@tanstack/react-query": "^5.90.2",
    "@types/dompurify": "^3.0.5",
    "ai": "^5.0.86",
    "better-sqlite3-multiple-ciphers": "^12.4.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "docx": "^9.5.1",
    "dompurify": "^3.3.0",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.31.2",
    "fast-xml-parser": "^5.3.0",
    "file-saver": "^2.0.5",
    "framer-motion": "^11.15.0",
    "html2canvas": "^1.4.1",
    "html2pdf.js": "^0.12.1",
    "inversify": "^7.10.3",
    "jspdf": "^3.0.3",
    "lru-cache": "^11.2.2",
    "lucide-react": "^0.546.0",
    "mammoth": "^1.11.0",
    "next-themes": "^0.4.6",
    "openai": "^6.9.0",
    "pdf-parse": "^2.4.5",
    "pdfkit": "^0.17.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hot-toast": "^2.6.0",
    "react-icons": "^5.5.0",
    "react-intersection-observer": "^9.16.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.9.4",
    "reflect-metadata": "^0.2.2",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1",
    "sonner": "^1.5.0",
    "tailwind-merge": "^3.3.1",
    "uuid": "9.0.1",
    "winston": "^3.18.3",
    "workbox-window": "^7.3.0",
    "zod": "^3.25.76",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@playwright/test": "^1.56.1",
    "@rollup/rollup-win32-x64-msvc": "^4.52.5",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.12",
    "@types/file-saver": "^2.0.7",
    "@types/node": "^22.10.2",
    "@types/pdfkit": "^0.17.3",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^4.0.9",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.1.2",
    "cross-env": "^10.1.0",
    "drizzle-kit": "0.31.7",
    "eslint": "^9.17.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^16.4.0",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "jsdom": "^27.0.1",
    "lint-staged": "^15.3.0",
    "playwright": "^1.56.1",
    "postcss": "^8.5.6",
    "prettier": "^3.4.2",
    "snyk": "^1.1300.2",
    "tailwindcss": "^3.4.18",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1",
    "vite": "^6.4.1",
    "vite-plugin-node-polyfills": "^0.24.0",
    "vite-plugin-pwa": "^1.1.0",
    "vitest": "^4.0.9",
    "wait-on": "^8.0.1"
  },
  "optionalDependencies": {
    "@beshkenadze/eyecite": "^2.7.6"
  }
}
