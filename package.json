{
  "name": "justice-companion",
  "version": "1.0.0",
  "description": "UK Legal Information Platform - Free legal information for citizens",
  "main": "dist-electron/main.js",
  "author": "Justice Companion Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && node scripts/copy-migrations.js && electron-builder",
    "build:win": "npm run build -- --win",
    "build:mac": "npm run build -- --mac",
    "build:linux": "npm run build -- --linux",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && node scripts/copy-migrations.js && electron-builder",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:migrate:status": "tsx scripts/migration-status.ts",
    "db:migrate:rollback": "tsx scripts/rollback-migration.ts",
    "db:backup": "tsx scripts/backup-database.ts",
    "db:backup:list": "tsx scripts/list-backups.ts",
    "test-data": "tsx scripts/generate-test-data.ts"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-icons": "^1.3.2",
    "@tanstack/react-query": "^5.56.0",
    "better-sqlite3": "^12.4.1",
    "clsx": "^2.1.1",
    "express": "^5.1.0",
    "fast-xml-parser": "^5.3.0",
    "framer-motion": "^11.5.0",
    "html2pdf.js": "^0.12.1",
    "lucide-react": "^0.441.0",
    "mammoth": "^1.11.0",
    "next-themes": "^0.4.6",
    "node-llama-cpp": "^3.14.0",
    "pdf-parse": "^2.1.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.26.0",
    "remark-gfm": "^4.0.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.5.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@shadcn/ui": "^0.0.4",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.0",
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.5.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.0",
    "concurrently": "^9.0.0",
    "electron": "^32.1.0",
    "electron-builder": "^25.0.5",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.10.0",
    "playwright": "^1.55.1",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.6.0",
    "vite": "^5.4.0",
    "vite-plugin-electron": "^0.28.7",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-static-copy": "^3.1.3",
    "vitest": "^2.1.0",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.justicecompanion.app",
    "productName": "Justice Companion",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist",
      "dist-electron"
    ],
    "asarUnpack": [
      "node_modules/node-llama-cpp/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png"
    }
  }
}
