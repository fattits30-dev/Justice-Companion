{
  "name": "justice-companion",
  "version": "1.0.0",
  "description": "UK Legal Information Platform - Free legal information for citizens",
  "main": "dist-electron/main.js",
  "author": "Justice Companion Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "dev": "vite",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md,mdx}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md,mdx}\"",
    "build": "tsc && vite build && node scripts/copy-migrations.js && electron-builder",
    "build:win": "npm run build -- --win",
    "build:mac": "npm run build -- --mac",
    "build:linux": "npm run build -- --linux",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:components": "vitest --run src/components",
    "test:components:watch": "vitest src/components",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && node scripts/copy-migrations.js && electron-builder",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:migrate:status": "tsx scripts/migration-status.ts",
    "db:migrate:rollback": "tsx scripts/rollback-migration.ts",
    "db:backup": "tsx scripts/backup-database.ts",
    "db:backup:list": "tsx scripts/list-backups.ts",
    "db:validate": "tsx scripts/validate-database-schema.ts",
    "test-data": "tsx scripts/generate-test-data.ts",
    "guard:build": "tsc -p automation/tsconfig.json",
    "guard": "npm run guard:build && node automation/dist/simple-orchestrator.js",
    "guard:once": "npm run guard:build && node automation/dist/simple-orchestrator.js --once",
    "rebuild:node": "node scripts/rebuild-for-node.js",
    "rebuild:electron": "node scripts/rebuild-for-electron.js",
    "pretest:e2e": "node scripts/rebuild-for-node.js",
    "test:e2e": "playwright test tests/e2e",
    "posttest:e2e": "node scripts/rebuild-for-electron.js",
    "pretest:e2e:headed": "node scripts/rebuild-for-node.js",
    "test:e2e:headed": "playwright test tests/e2e --headed",
    "posttest:e2e:headed": "node scripts/rebuild-for-electron.js",
    "pretest:e2e:debug": "node scripts/rebuild-for-node.js",
    "test:e2e:debug": "playwright test tests/e2e --debug",
    "posttest:e2e:debug": "node scripts/rebuild-for-electron.js",
    "pretest:e2e:ui": "node scripts/rebuild-for-node.js",
    "test:e2e:ui": "playwright test tests/e2e --ui",
    "posttest:e2e:ui": "node scripts/rebuild-for-electron.js",
    "test:e2e:report": "playwright show-report test-results/html-report",
    "test:e2e:cleanup": "powershell -ExecutionPolicy Bypass -File scripts/cleanup-test-processes.ps1",
    "audit:dependencies": "npm audit --production --audit-level=high",
    "best-practices": "npm run lint && npm run type-check && npm run audit:dependencies",
    "prepare": "husky"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.65.0",
    "@openai/codex-sdk": "^0.45.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-icons": "^1.3.2",
    "@tanstack/react-query": "^5.56.0",
    "better-sqlite3": "^12.4.1",
    "chokidar": "^4.0.3",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "fast-xml-parser": "^5.3.0",
    "framer-motion": "^11.5.0",
    "html2pdf.js": "^0.12.1",
    "lucide-react": "^0.441.0",
    "mammoth": "^1.11.0",
    "next-themes": "^0.4.6",
    "node-llama-cpp": "^3.14.0",
    "pdf-parse": "^2.1.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.9.4",
    "remark-gfm": "^4.0.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.5.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@executeautomation/playwright-mcp-server": "^1.0.4",
    "@modelcontextprotocol/server-filesystem": "^2025.8.21",
    "@modelcontextprotocol/server-github": "^2025.4.8",
    "@modelcontextprotocol/server-memory": "^2025.9.25",
    "@modelcontextprotocol/server-puppeteer": "^2025.5.12",
    "@modelcontextprotocol/server-sequential-thinking": "^2025.7.1",
    "@shadcn/ui": "^0.0.4",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.5.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "@upstash/context7-mcp": "^1.0.21",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.0",
    "concurrently": "^9.0.0",
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.10.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.3",
    "mcp-server-sqlite": "^0.0.2",
    "playwright": "^1.55.1",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.20.6",
    "typescript": "^5.6.0",
    "vite": "^6.3.6",
    "vite-plugin-electron": "^0.28.7",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-static-copy": "^3.1.3",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.0"
  },
  "build": {
    "appId": "com.justicecompanion.app",
    "productName": "Justice Companion",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist",
      "dist-electron"
    ],
    "asarUnpack": [
      "node_modules/node-llama-cpp/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings 0",
      "prettier --write",
      "bash -c 'npm run type-check'"
    ],
    "*.{js,jsx,json,css,md}": [
      "prettier --write"
    ]
  }
}
