{
  "name": "justice-companion",
  "version": "1.0.0",
  "description": "Privacy-first AI-powered case management for UK legal matters",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:frontend:e2e": "vite --port 5178 --strictPort",
    "dev:backend": "node ./scripts/run-backend-dev.mjs",
    "dev:full": "concurrently -n \"backend,frontend\" -c \"yellow,cyan\" \"npm run dev:backend\" \"npm run dev:frontend:e2e\"",
    "start": "powershell -ExecutionPolicy Bypass -File scripts/dev-manager.ps1 start",
    "stop": "powershell -ExecutionPolicy Bypass -File scripts/dev-manager.ps1 stop",
    "status": "powershell -ExecutionPolicy Bypass -File scripts/dev-manager.ps1 status",
    "clean": "powershell -ExecutionPolicy Bypass -File scripts/dev-manager.ps1 clean",
    "start:legacy": "npm run dev:full",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:python:sizes": "python scripts/check_file_sizes.py --path backend --limit 600 --exclude backend/venv --baseline config/file_size_baseline.txt",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "prepare": "husky",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "e2e:debug": "playwright test --debug",
    "e2e:report": "playwright show-report"
  },
  "dependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@sentry/react": "10.28.0",
    "@tanstack/react-query": "^5.90.11",
    "@tanstack/react-query-devtools": "^5.91.1",
    "ai": "^5.0.102",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.4",
    "docx": "^8.5.1",
    "fast-xml-parser": "^4.5.1",
    "framer-motion": "^11.13.1",
    "inversify": "^6.2.1",
    "lucide-react": "^0.468.0",
    "pdfkit": "^0.15.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.4.1",
    "react-markdown": "^9.0.3",
    "react-router-dom": "^6.28.0",
    "react-window": "^1.8.11",
    "reflect-metadata": "^0.2.2",
    "sonner": "^1.7.1",
    "tailwind-merge": "^2.5.4",
    "tsyringe": "^4.10.0",
    "uuid": "^11.0.3",
    "workbox-window": "^7.4.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22.8.1",
    "@types/pdfkit": "^0.17.3",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/react-window": "^1.8.8",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/coverage-v8": "^4.0.14",
    "@vitest/ui": "^4.0.14",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "eslint": "^9.14.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.5.2",
    "postcss": "^8.5.0",
    "prettier": "^3.3.3",
    "sql.js": "^1.13.0",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.12.2",
    "vite": "^6.0.5",
    "vite-plugin-node-polyfills": "^0.24.0",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.14"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.17.0"
  },
  "author": "",
  "license": "MIT",
  "keywords": [
    "legal",
    "case-management",
    "ai",
    "pwa",
    "react",
    "typescript"
  ]
}
